
<h1>Listing My Liked Events</h1>

<table>
  <thead>
    <tr>
      <th>Event name</th>
      <th>Event location</th>
      <th>Event date</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @my_like_events.each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.event_location %></td>
        <td><%= event.event_date %></td>
        <td><%= event.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Event name</th>
      <th>Event location</th>
      <th>Event date</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><%= event.event_location %></td>
        <td><%= event.event_date %></td>
        <td><%= event.user.name %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

